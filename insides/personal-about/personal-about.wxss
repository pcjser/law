.personal-about-page image {
  display: block;
}
.personal-about-page .about-top {
  height: 482rpx;
  position: relative;
  color: #ffffff;
  font-size: 34rpx;
}
.personal-about-page .about-top::after {
  content: "";
  position: absolute;
  width: 2000rpx;
  height: 2000rpx;
  border-radius: 50%;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  background-color: #00c2c2;
  z-index: 1;
}
.personal-about-page .about-top .logo {
  width: 140rpx;
  height: 140rpx;
  display: block;
  position: absolute;
  z-index: 2;
  left: 50%;
  transform: translateX(-50%);
  top: 44rpx;
}
.personal-about-page .about-top .company {
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 1;
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
  top: 212rpx;
}
.personal-about-page .about-top .description {
  text-align: center;
  position: absolute;
  z-index: 2;
  width: 590rpx;
  line-height: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  top: 310rpx;
}
.personal-about-page .about-desc {
  width: 100%;
  height: 320rpx;
  margin-top: 36rpx;
}
.personal-about-page .about-ad {
  margin: 24rpx auto 0;
  height: 222rpx;
  width: 690rpx;
}
.personal-about-page .about-slogan {
  margin: 48rpx auto 0;
  height: 338rpx;
  width: 690rpx;
}
.personal-about-page .about-icon {
  width: 20rpx;
  height: 38rpx;
  margin: 30rpx auto;
}
.personal-about-page .content-block {
  margin-bottom: 40rpx;
  display: flex;
  align-items: stretch;
}
.personal-about-page .content-block .block-image {
  width: 346rpx;
  height: 272rpx;
}
.personal-about-page .content-block .block-text {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  line-height: 48rpx;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 2rpx;
}
.personal-about-page .about-tips {
  padding: 24rpx 0 32rpx;
  color: #c1c1c1;
  font-size: 26rpx;
  text-align: center;
}
